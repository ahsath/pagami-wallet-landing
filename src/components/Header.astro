<style>
    .header {
        display: flex;
        flex-direction: column;
        row-gap: 64px;

        .header__logo {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 65px;
        }

        .header__img {
            width: 100%;
            margin-inline: auto;
        }

        .header__hero {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            row-gap: 24px;
            height: 100%;

            .hero__gplay-link {
                max-width: 150px;
            }
        }

        @media (width >= 768px) {
            & {
                row-gap: 32px;
            }

            .header__logo {
                height: 100px;
            }

            .header__hero {
                row-gap: 64px;

                .hero__gplay-link {
                    max-width: 200px;
                }
            }
        }
    }
</style>
